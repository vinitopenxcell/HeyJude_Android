<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">


        <com.heyjude.androidapp.customview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="@dimen/scale_90dp"
            android:layout_height="@dimen/scale_90dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/scale_20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_jude"
            app:border_color="@color/white"
            app:border_width="@dimen/scale_2dp"
            app:corner_radius="@dimen/scale_90dp"
            app:is_oval="false" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.heyjude.androidapp.customview.TextRobotoBold
                android:id="@+id/tvUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/scale_30dp"
                android:paddingTop="@dimen/scale_20dp"
                android:singleLine="true"

                android:text="Hi Matt,"
                android:textColor="@color/white"
                android:textSize="@dimen/text_24"
                android:textStyle="bold" />

            <com.heyjude.androidapp.customview.TextRobotoRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/scale_10dp"
                android:paddingTop="@dimen/scale_20dp"
                android:text="I'm Jude"
                android:textColor="@color/white"
                android:textSize="@dimen/text_24" />

        </LinearLayout>

        <com.heyjude.androidapp.customview.TextRobotoRegular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/scale_30dp"
            android:paddingTop="@dimen/scale_5dp"
            android:text="What can I help you with?"
            android:textColor="@color/white"
            android:textSize="@dimen/text_24" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ECEFF1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/scale_7dp"
            android:gravity="center">

            <com.heyjude.androidapp.customview.EditRobotoRegular
                android:id="@+id/editChatMsg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/scale_10dp"
                android:layout_weight="1"
                android:background="@drawable/linear_back"
                android:hint="Type your message here..."
                android:paddingBottom="@dimen/scale_5dp"
                android:paddingLeft="@dimen/scale_10dp"
                android:paddingRight="@dimen/scale_5dp"
                android:paddingTop="@dimen/scale_5dp"
                android:textColor="#5f6060"
                android:textColorHint="#5f6060"
                android:textSize="@dimen/text_16" />

            <ImageView
                android:id="@+id/ivSend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/scale_2dp"
                android:src="@drawable/ic_chat_icon" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>