<com.heyjude.androidapp.customview.MapWrapperLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.heyjude.androidapp.fragment.MapViewFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.MapFragment"
            class="com.heyjude.androidapp.fragment.MyMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.heyjude.androidapp.customview.TextRobotoLight
            android:id="@+id/tv_ListView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="@dimen/scale_10dp"
            android:background="@drawable/view_background"
            android:clickable="true"
            android:drawablePadding="@dimen/scale_10dp"
            android:drawableRight="@drawable/icon_list_view"
            android:padding="@dimen/scale_5dp"
            android:text="LIST"
            android:textColor="@color/white"
            android:textSize="@dimen/text_14" />


    </FrameLayout>
</com.heyjude.androidapp.customview.MapWrapperLayout>
