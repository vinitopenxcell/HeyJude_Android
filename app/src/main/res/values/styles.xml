<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/blue</item>
        <item name="colorPrimaryDark">@color/dark_blue</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:autoCompleteTextViewStyle">@style/cursorColor</item>
    </style>

    <style name="ToolbarTheme" parent="AppTheme">
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>


    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/dark_blue</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@color/ColorPrimary</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CustomDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="cursorColor" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textCursorDrawable">@drawable/search_cursor</item>
    </style>


    <style name="vendorRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/vendor_rating_bar</item>
        <item name="android:minHeight">23dip</item>
        <item name="android:maxHeight">45dip</item>
    </style>


</resources>
